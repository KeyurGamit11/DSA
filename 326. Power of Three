Example 1:

Input: n = 27
Output: true
Explanation: 27 = 33
#code :
class Solution {
public:
    bool isPowerOfThree(int n) {
        //base case
        if(n <= 0){
            return false;
        }
        if(n == 1){
           return true;
        }
        // one case solve
        if(n%3 != 0){
            return false;
        }
        //recursive call
        return isPowerOfThree(n/3);
    }
};
