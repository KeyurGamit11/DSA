Input: num = 100
Output: "202"
#code:
class Solution {
public:
    string convertToBase7(int num) {
        string ans;
        int n = abs(num);
        
        while(n>=1){
            int dig = n%7;
            ans += to_string(dig);
            n /= 7;
        }
        if(num==0){
            return "0";
        }
        if(num <0){
            ans += "-";
        }
        reverse(ans.begin(),ans.end());
        
        return ans;
    }
};
