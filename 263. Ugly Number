Input: n = 6
Output: true
Explanation: 6 = 2 Ã— 3
#we just have to devided by2,3,5 till 1 left so it is ugly number
#code:
class Solution {
public:
    bool isUgly(int n) {
        if(n <= 0){
            return false;
        }
        while(n%2 == 0) n /= 2;
        while(n%3 == 0) n /=3;
        while(n%5 == 0) n /=5;

        return n==1;
    }
};
