Input: n = 1553322
Output: 1
Explanation:
The least frequent digit in n is 1, which appears only once. All other digits appear twice.
#code:
class Solution {
public:
    int getLeastFrequentDigit(int n) {
        int arr[11]={0};
        while(n){
            int dig = n%10;
            arr[dig]++;
            n /= 10;
        }
        int ans=0;
        int maxi = INT_MAX;
        for(int i=0; i<=10; i++){
            //cout<<arr[i]<<" ";
            if(arr[i] < maxi && arr[i] != 0){
                maxi = arr[i];
                ans = i;
            }
        }
        return ans;
    }
};
